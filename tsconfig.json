{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "importHelpers": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["structure/modularized/src/shared/*"],
      "@petals/*": ["external/petals/*"],
      "@kokiri/*": ["external/kokiri/*"]
    }
  },
  "include": ["structure/modularized/src", "external"]
}
